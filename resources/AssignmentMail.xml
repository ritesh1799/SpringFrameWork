<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean id="mail" class = "org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">

        <property name = "locations">
                  <list>
                      <value>mails.properties</value>
                      <value>mark.properties</value>
                      <value>student.properties</value>
                  </list>
        </property>

    </bean>

    <bean id = "mails" class = "com.multipleconfigassignment.Mail">
        <property name="host" value = "${mail.host}"/>
        <property name="username" value = "${mail.username}"/>
        <property name="password" value = "${mail.password}"/>

    </bean>

    <bean id = "marks" class = "com.multipleconfigassignment.Mark">
        <property name="mark1" value="${mark.mark1}"/>
        <property name="mark2" value="${mark.mark2}"/>
    </bean>

    <bean id =  "students" class="com.multipleconfigassignment.Student">
        <property name="studentId" value="${student.studentId}"/>
        <property name="studentName" value="${student.studentName}"/>
    </bean>

</beans>